@page
@model Torneo.App.Frontend.Pages.Partido.IndexModel
@{
}
<h1> Listado de Partido</h1>
<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">FechaHora</th>
      <th scope="col">VisitanteId</th>
      <th scope="col">LocalId</th>
      <th scope="col">MarcadorEquipoLocal</th>
      <th scope="col">MarcadorEquipoVisitante</th>

    </tr>
  </thead>
  <tbody>
      @foreach (var Partido in Model.Partido )
      {
        <tr>
            <th scope="row">@Partido.Id</th>
            <td>
                <a class="btn btn-primary" asp-page="./Details" asp-route-id="@Partido.Id">
                Detalle
                </a>
            </td> 
        </tr>
      }  
  </tbody>
</table>
