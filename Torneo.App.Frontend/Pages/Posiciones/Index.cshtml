@page
@model Torneo.App.Frontend.Pages.Posiciones.IndexModel
@{
}
@if(Model.ErrorEliminar)
{
   <div class= "alert alert-danger" role="alert">
     No se puede eliminar el Posicion
   </div>
}
<a class="btn btn-primary" asp-page="./Create">Crear Posicion</a>
<h1>Listado de Posiciones</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Nombre</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var posicion in Model.posiciones)
    {
      <tr>
        <th scope="row">@posicion.Id</th>
        <td>@posicion.Nombre</td>
        <td>
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
            data-bs-toggle="dropdown" aria-expanded="false">
              Acciones
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <li><a class="dropdown-item" asp-page="./Details" asp-route-id="@posicion.Id">Detalles</a></li>
              <li><a class="dropdown-item" asp-page="./Edit" asp-route-id="@posicion.Id">Editar</a></li>
              @if (posicion.Jugadores.Count == 0)
                {
                  <form method="post" class="d-inline">
                    <li><a class="dropdown-item" asp-page-handler="Delete" asp-route-id="@posicion.Id" onclick="return confirm(`¿Esta seguro de eliminar el Posicion ?`)">Eliminar</a></li>
                     </form>
                }
            </ul>
          </div>
        </td>
      </tr>
    }
  </tbody>
</table>
