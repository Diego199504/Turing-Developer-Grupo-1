@page
@model Torneo.App.Frontend.Pages.Jugador.EditModel
@{
}<h1>Editar Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <input asp-for="jugador.Numero" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="equipoSelected"></label>
        <select asp-for="equipoSelected" asp-items="@Model.equipoOption" name="idEquipo" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="posicionSelected">D.T.</label>
        <select asp-for="posicionSelected" asp-items="@Model.posicionOption" name="idPosicion" class="form-control">
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block">Editar jugador</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>