@page
@model Torneo.App.Frontend.Pages.Jugador.IndexModel
@{
}
<h1>Listado de Jugadores Inscritos</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Posicion</th>
            <th scope="col">Equipo</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <th scope="row">@jugador.Id</th>
                <td>@jugador.Nombre</td>
                <td>@jugador.Posicion.Nombre</td>
                <td>@jugador.Equipo.Nombre</td>
                <td>
                    <a class="btn btn-info" asp-page="./Details" asp-route-id="@jugador.Id">
                        <b>Detalle</b>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>