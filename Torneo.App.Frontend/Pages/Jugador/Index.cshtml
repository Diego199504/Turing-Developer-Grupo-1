@page
@model Torneo.App.Frontend.Pages.Jugador.IndexModel
@{
}
<a class="btn btn-primary" asp-page="./Create">Crear Jugador</a>
<h1>Listado de Jugadores Inscritos</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <!-- <th scope="col">Posicion</th>
            <th scope="col">Equipo</th> 
            <th scope="col">Accion</th>-->
        </tr>
    </thead>
    <tbody>
        @foreach (var jugador in Model.jugadores)
        {
            <tr>
                <th scope="row">@jugador.Id</th>
                <td>@jugador.Nombre</td>
                <td>
                    <button type="button" class="navbar-toggler btn btn-link" data-bs-toggle="collapse"
                    data-bs-target="#MenuAcciones">
                        <span class="navbar-toggler-icon"></span>
                        Accion
                    </button>
                    <div id="MenuAcciones" class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item"><a class="nav-link text-dark" asp-page="./Details"
                                asp-route-id="@jugador.Id">Detalles</a></li>
                        </ul>
                        <ul class="navbar-nav ms-3">
                            <li class="nav-item"><a class="nav-link text-dark" asp-page="./Edit"
                                asp-route-id="@jugador.Id">Editar</a></li>
                        </ul>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>