@page
@model Torneo.App.Frontend.Pages.Equipos.CreateModel
@{
}

<style>
    *{box-sizing: border-box;}
    .header{border:1px;
            padding: 1px;}
    .menu{width: 70%;
          float: left;
          padding: 1px;
          border: 1px;
          text-align:left;}
    .main{width: 30%;
          float: left;
          padding: 1px;
          border: 1px;
          text-align: center;}
</style>
<div class="header">
    <h1>Nuevo equipo</h1>
</div>


<form method="post">

<div class="menu">
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre" class="form-control">
    </div>

    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select id="idMunicipio" name="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="idDT">D.T.</label>
        <select id="idDT" name="idDT" class="form-control">
            @foreach (var dt in Model.dts)
            {
                <option value="@dt.Id">@dt.Nombre</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary btn-block" style="margin:50px;">Crear equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>

</div>
</div>

<div class="main"> 
            <figure class="figure">
            <img class="img-fluid rounded" src="~/imagen/equipos.jpg" width="200px" />
            </figure>
       
    </div>
</div>